<body>
    <!-- side Nav Container -->
    <div id="mySidebar" class="sidebar">
        <i class="fas fa-times closebtn" onclick="closeNav()"></i>
        <a  class="sidehover">Books</a>
        <a href="#" class="sidehover">eBooks</a>
        <a href="#" class="sidehover">Music</a>
        <a href="#" class="sidehover">Audiobooks</a>
